.notification-list {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 160px;
    z-index: 9999;
    &__item {
        margin-top: 5px;
        border-radius: 0 3px 3px 0;
        transform: translateX(-100%);
        background: rgba(0, 0, 0, .6);
        padding: 4px 8px;
        font-size: 11px;
        color: #fff;
        transition: transform .3s ease-out, opacity  .2s ease-in;
        opacity: 0;
        &.success {
            background: rgba(55, 179, 157, 0.77);
        }
        &.error {
            background: rgba(179, 55, 55, 0.87);
        }
        &.visible {
            &:hover {
                opacity: .8;
                cursor: pointer;
            }
            opacity: 1;
            transform: translateX(0);
        }
    }
}
