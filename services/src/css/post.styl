.post {
    display: inline-block;
    text-align: left;
    width: 210px;
    height: 455px;
    border: 1px solid #d9d9d9;
    border-radius: 1px;
    overflow: hidden;
    margin: 0 23px 29px 0;
    position: relative;
    & .icon {
        margin: 0 auto;
    }
    &__img {
        max-height: 165px;
        max-width: 210px;
        border-bottom: 1px solid #d9d9d9;
    }
    &__header {
        font-size: 18px;
        color: #575756;
        margin: 50px 11px 0 16px;
        line-height: 22px;
        min-height: 44px;
        overflow: hidden;
    }
    &__date {
        margin-left: 18px;
        font-size: 10px;
        position: absolute;
        bottom: 34px;
        background: #FFF;
        right: 0;
        left: 0;
        padding-bottom: 8px;
        padding-top: 4px;
    }
    &__preview {
        font-size: 12px;
        margin: 6px 7px 0 18px;
        line-height: 17px;
        max-height: 130px;
        overflow: hidden;
    }
    &__likes {
        padding: 5px 2px;
        text-align: center;
        position: absolute;
        bottom: 0;
        left: 10px;
        right: 10px;
        border-top: 1px dotted #d9d9d9;
        background: #fff;
    }
    &__category {
        position: absolute;
      top: 183px;
      left: 22px;
      font-size: 10px;
      font-style: italic;
      color: #707070;
      text-decoration: underline;
      transition: opacity .2s ease;
      opacity: 1;
        &:hover {
            color: #707070;
            opacity: .6;
        }
    }

    &__header {
        transition: opacity .2s ease;
    }

    &__link {
        border: 0;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover,
        &:hover .post__header {
            opacity: .6;
            text-decoration: none;
        }
    }

}
