main {
}

body {
    color: #535353;
    text-size-adjust: none;
    -webkit-text-size-adjust: none;
    -ms-text-size-adjust: none;

}

.b-container.header,
.b-container.footer {
    width: 1090px;
    margin: 0 auto;
    padding: 0 .9375rem;
}

.b-container.body {
    min-width: 1090px;
    max-width: 1203px;
    margin: 0 auto;
    width: auto;
}

.body {
    &__list {
        //margin: 19px 0 14px;
        //padding: 0 1.7375rem;
        text-align: center
    }
    &__main {
        padding: 0 1.7375rem;
        margin: 0 auto;
        width: 1090px;

    }
    &__share {
        position: relative;
        margin-bottom: 35px;
    }
    &__header-blog {
        text-align: center;
        margin: 13px 0 36px;
        font-size: 37px;
        font-weight: 400;
        color: #565656;
        &._list {
            margin-top: 86px;
        }
        &._services {
            margin-top: 77px;
        }
    }
    &__services {
        text-align: center;
        margin-bottom: 26px;
    }
    &__pagination {
        text-align: center;
        margin: 6px 0 68px;
    }
}

.media-right {
    padding-left: 36px;
}

.button_size_m {
    border: 1px solid;
    font-size: 13px;
    vertical-align: middle;
    border-radius: 5px;
    line-height: 16px;
    vertical-align: middle;
    font-style: italic;
    opacity: 1;
    outline: none;
    transition: opacity .2s ease-in;
    &:hover {
        opacity: .6;
    }
}

.share {
    &__img {
        max-width: 232px;
    }

    &__text {
        position: absolute;
        top: 80px;
        font-size: 40px;
        color: #fff;
        font-weight: 700;
        left: 0;
        right: 0;
        text-align: center;
    }
}

.icon {
    display: table;
    &__wrap {
        display: table-row;
    }
    &__item {
        display: table-cell;
    }
    &__like,
    &__messages,
    &__view,
    &__share {
        background-image: url(image/icons.svg);
        user-select: none;
        display: inline-block;
        height: 12px;
        vertical-align: middle;
        opacity: 1;
    }
    &__like {
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
        cursor: pointer;
        background-position: 279px -417px;
        width: 16px;
    }
    &__messages {
        background-position: 230px -417px;
        width: 14px;
        cursor: pointer;
        text-decoration: none;
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
    }
    &__view {
        background-position: 188px -417px;
        width: 17px;
    }
    &__share {
        background-position: 131px -417px;
        width: 13px;
        cursor: pointer;
        &:hover {
            opacity: .2;
        }
        transition: opacity .2s ease-out;
    }

    &__counter {
        font-size: 12px;
        color: #c6c6c6;
        display: inline-block;
        min-width: 30px;
        padding-right: 10px;
    }
}

.popover {
    border: 1px solid #ececec;
    &-arrow {
        border-right-color: rgba(0, 0, 0, 0.15) !important;
    }
}

.media-right.right {
    min-width: 232px;
}

.post:nth-child(4n) {
    margin-right: 0;
}

.share {
    display: inline-block;
    &__item &__link._twi {
        background-position: 0 -87px;
    }
    &__item &__link._vk {
        background-position: 0 -58px;
    }
    &__item &__link._fb {
        background-position: 0 2px;
    }
    &__item &__link._mail {
        background-position: 0 -29px;
    }
    &__item &__link._odkl {
        background-position: 0 -116px;
    }
    &__item &__link._gplus {
        background-position: 0 -144px;
    }
    &__link._more {
        background-image: url(image/icons.svg);
        background-position: -222px -252px;
        background-size: 268px;
        cursor: pointer;
    }

    &__item {
        display: inline-block;
        margin: 0 23px 6px 0;
        height: 25px;
    }
    &__item._popup {
        margin: 0;
    }
    &__item._popup + &__item._popup {
        margin-left: 20px;
    }
    &__item._column {
        display: block;
        margin: 0 0 10px 0;
    }
    &__link {
        display: inline-block;
        width: 25px;
        height: 25px;
        margin: 0;
        padding: 0;
        outline: none;
        background-color: #37b39c;
        border-radius: 3px;
        background-image: url(image/b-share_counter_small.png);
        background-repeat: no-repeat;
        opacity: 1;
        background-position-x: 1px;
        transition: opacity .2s ease;

        &:hover {
            opacity: .6;
        }
    }
}

.body__services a {
    width: 302px;
    height: 312px;
    margin: 0 40px 50px 0;
    display: inline-block;
    transition: opacity .2s ease;
    opacity: 1;
    vertical-align: top;

    &:nth-child(3n) {
        margin-right: 0;
    }
    &:hover {
        text-decoration: none;
        opacity: .6;
    }
}

.service-stock {
    background: #00b99e;
    color: #fff;
    &:hover {
        color: #fff;
    }
    &__header {
        font-size: 50px;
        margin-bottom: 17px;
        &::after {
            content: '';
            width: 75px;
            height: 1px;
            background-color: #fff;
            display: block;
            margin: 8px auto 0;
        }
    }
    &__wrap {
        display: table-cell;
        height: 311px;
        vertical-align: middle;
        padding: 0 33px;
        text-align: center;
    }
}

.service {
    border: 1px solid #d9d9d9;

    &__name {
        text-align: center;
        height: 84px;
        vertical-align: middle;
        font-size: 18px;
        line-height: 25px;
        border-top: 5px solid #00ba9e;
        padding: 17px 40px 0;
        font-weight: 400;

    }
    &__img {
        width: 300px;
        height: 224px;
    }
}

.promo {
    position: relative;
    width: 100%;
    height: 318px;
    background-position: 50% 0;
    background-repeat: no-repeat;
    padding: 1px;
    &__info {
        text-align: right;
        width: 1090px;
        margin: 27px auto 0;
        text-align: right;
        padding: 0 3.1em;
    }
    &__text {
        color: #9c99a0;
        display: inline-block;
        max-width: 506px;
    }
    &__header {
        display: inline-block;
        font-size: 44px;
        color: #00B8A2;
        line-height: 54px;
        max-width: 506px;
        margin-bottom: 15px;
    }
    &__button {
        margin-top: 28px;
    }
}

.carousel {
    &-item {
        position: relative;
    }
    & .control {
        position: absolute;
        top: 50%;
        margin-top: -28px;
        &.left,
        &.right {
            line-height: 0;
            border-radius: 50%;
            background: #fff;
            pointer-events: all;
        }
        &.left {
            left: 0;
        }
        &.right {
            right: 0;
        }
    }
    &__wrap-arr {
        width: 1090px;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        margin-left: -545px
        pointer-events: none;
    }
    & .arrow-left,
    & .arrow-right {
        width: 44px;
        height: 44px;
        display: inline-block;
        opacity: 1;
        transition: opacity .2s ease;
        &:hover {
            opacity: .6;
        }
    }

    & .arrow-left {
        background: url("image/icons.svg") 249px 617px;
    }
    & .arrow-right {
        background: url("image/icons.svg") 193px 617px;
    }
}

.info-card {
    position: absolute;
    top: 101px;
    left: 50%;
    margin-left: -460px;
    width: 540px;
    font-size: 25px;
    &._right {
        left: auto;
        right: 50%;
        margin-right: -453px;
        margin-left: 0;
        width: 406px;
    }
    &__text {
        max-height: 237px;
        overflow: hidden;
        font-size: 18px;
        color: #979797;
        line-height: 1.36em;
    }
    &__header {
        font-size: 3em;
        color: #37b39c;
        line-height: 60px;
        margin-bottom: 33px;
    }
    &__button {
        margin-top: 27px;
    }
}




